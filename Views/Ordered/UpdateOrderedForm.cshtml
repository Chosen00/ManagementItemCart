@model CustomerCart.Models.OrderedModel

@{
    ViewData["Title"] = "Update Ordered";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Ordered Item</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        body {
            background-color: #ffe6f2;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #f8b8d4; /* Pink background color */
        }

        .card-title {
            color: #fff; /* White text color */
        }

        .form-control {
            background-color: #fff; /* White background for form controls */
            color: #495057; /* Dark text color */
        }

        .btn-primary {
            background-color: #ff6b9a; /* Pink button color */
            border-color: #ff6b9a; /* Pink button border color */
        }

            .btn-primary:hover {
                background-color: #e45285; /* Lighter pink button color on hover */
                border-color: #e45285; /* Lighter pink button border color on hover */
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@TempData["SuccessMessage"]</strong>
                <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@TempData["ErrorMessage"]</strong>
                <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center mb-4">Update Ordered Item</h5>
                        <form action="UpdateOrderedForm" method="POST">
                            <div class="form-group">
                                <label for="orderedItemId">Ordered Item Id</label>
                                <input type="number" class="form-control" id="orderedItemId" name="orderedItemId" value="@Model.OrderedItemId" required>
                            </div>
                            <div class="form-group">
                                <label for="itemName">Item Name</label>
                                <input type="text" class="form-control" id="itemName" name="itemName" value="@Model.ItemName" required>
                            </div>
                            <div class="form-group">
                                <label for="itemBrand">Item Brand</label>
                                <input type="text" class="form-control" id="itemBrand" name="itemBrand" value="@Model.ItemBrand" required>
                            </div>
                            <div class="form-group">
                                <label for="quantityOrdered">Quantity Ordered</label>
                                <input type="number" class="form-control" id="quantityOrdered" name="quantityOrdered" value="@Model.QuantityOrdered" required>
                            </div>
                            <div class="form-group">
                                <label for="price">Price</label>
                                <input type="number" class="form-control" id="price" name="price" value="@Model.Price" required>
                            </div>
                            <div class="form-group">
                                <label for="dateOrdered">Date Ordered</label>
                                <input type="date" class="form-control" id="dateOrdered" name="dateOrdered" value="@Model.DateOrdered" required>
                            </div>
                            <br />
                            <button type="submit" class="btn btn-primary btn-block">Add Item</button>
                            <a href="@Url.Action("JoinTableForm", "Ordered")" class="btn btn-primary btn-block">Back</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
        <br />
    </div>
</body>
</html>
